Package: jrSiCKLSNMF
Type: Package
Title: Multimodal Single-Cell Omics Dimensionality Reduction
Version: 1.2.1
Authors@R: 
    c(person("Dorothy","Ellis",email="ddemoreellis@gmail.com",role=c("aut","cre"),
